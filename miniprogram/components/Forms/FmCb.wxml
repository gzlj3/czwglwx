<!--当前房屋对象：sourceList-->
<template name="FmCb">
  <view class="page">
    <view class="page__hd">
      <view class="page__title">集中抄表</view>
      <view class="page__desc">上月帐单已经结清，且已接近收租日期的房源在此抄水电表。</view>
    </view>
    <view class="page__bd">
      <view class="weui-panel weui-panel_access" wx:key="_id" wx:for="{{sourceList}}">
        <view class="weui-panel__bd">
          <view class="weui-cells__title">{{item.fwmc}} {{item.zhxm}}</view>
          <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">水表读数</view>
                </view>
                <view class="weui-cell__bd">
                    <input id="{{index}}.sbcds" type="number" value="{{item.sbcds}}" bindinput="onInputBlur" class="weui-input" placeholder="上次:{{item.sscds}}"/>
                </view>
            </view>
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">电表读数</view>
                </view>
                <view class="weui-cell__bd">
                    <input id="{{index}}.dbcds" type="number" value="{{item.dbcds}}" bindinput="onInputBlur" class="weui-input" placeholder="上次:{{item.dscds}}"/>
                </view>
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>
</template>