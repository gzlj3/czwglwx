<!--当前房屋对象：sourceList-->
<template name="FmCb">
  <view class="page">
      <view class="page__bd">
          <view class="weui-panel weui-panel_access" wx:key="_id" wx:for="{{sourceList}}">
              <view class="weui-panel__bd">
                  <view class="weui-media-box weui-media-box_appmsg">
                      <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
                        <text>{{item.fwmc}}</text>
                        <rich-text nodes="{{[{name:'div'}]}}"></rich-text>
                        <text>{{item.zhxm}}</text>
                      </view>
                      <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
                        <view class="weui-cell weui-cell_input">
                            <view class="weui-cell__hd">
                                <view class="weui-label">水表读数</view>
                            </view>
                            <view class="weui-cell__hd">
                                <input id="{{index}}.sbcds"  data-require="{{true}}" value="{{item.sbcds}}" bindblur="onInputBlur" class="weui-input" placeholder="上次:{{item.sscds}}"/>
                            </view>
                        </view>
                        <view class="weui-cell weui-cell_input">
                            <view class="weui-cell__hd">
                                <view class="weui-label">电表读数</view>
                            </view>
                            <view class="weui-cell__bd">
                                <input id="{{index}}.dbcds" data-require="{{true}}" value="{{item.dbcds}}" bindblur="onInputBlur" class="weui-input" placeholder="上次:{{item.dscds}}"/>
                            </view>
                        </view>
                      
                          <!-- <view class="weui-media-box__title">
                            水表读数
                            <input id="sbcds" name="sbcds" data-require="{{true}}" value="{{item.sbcds}}" bindblur="onInputBlur" class="weui-input" placeholder="上次:{{item.sscds}}"/>
                          </view>
                          <view class="weui-media-box__title">电表读数</view> -->
                      </view>
                  </view>
              </view>
          </view>
      </view>
  </view>
</template>