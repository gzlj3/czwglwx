/* pages/bluetooth/bluetooth.wxss */
._root{
  width: 100%;
  height: 100%;
  background-color: #fff;
}
.view-header{
  width: 100%;
  height: 120rpx;
  top:0;
  position: fixed;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-self: center;
  flex-grow: 1;
  box-shadow: 0px 5px 8px #cccccc;
  padding-top: 10rpx;
  background-color: #fff;
}
.search-bluetooth,.stop-search{
  width: 300rpx;
  height: 100rpx;
}
.view-content{
  width: 100%;
  margin-top: 120rpx;
}
.view-content-item{
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-content: center;
  align-items: center;
  align-self: center;
  border-bottom-width: 1rpx;
  border-bottom-style: solid;
  border-bottom-color: #eaeaea;
}
.text_name{
  padding-left: 30rpx;
  padding-right: 10rpx;
}
.text_rssi{
  padding-right: 30rpx;
}