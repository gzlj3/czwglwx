      <view class="grant-container grant-container-wxgrant" wx:if="{{!waitingCloud && !user}}">
        <view class='grant-item'>服务器处理异常</view>
        <view class='grant-item'>
          <button size='mini' type='primary' ontap='refreshUser'>重新刷新</button>
        </view>
