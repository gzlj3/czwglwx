/* pages/wifi/wifi.wxss */

.content {
  width: 100%;
}

.view-header {
  width: 100%;
  height: 120rpx;
  top: 0;
  position: fixed;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-self: center;
  flex-grow: 1;
  box-shadow: 0px 5px 8px #ccc;
  padding-top: 10rpx;
  background-color: #fff;
}

.search-wifi, .stop-wifi {
  width: 300rpx;
  height: 100rpx;
}

.scry {
  width: 100%;
  height: 100%;
  margin-top: 120rpx;
}

.view-dialog {
  width: 100%;
  height: 100%;
  background-color: rgba(15, 15, 26, 0.7);
  position: absolute;
  z-index: 999;
  display: flex;
  flex-direction: column;
  top: 0;
  
}
.dialog-container-top,.dialog-container-bottom{
  width: 100%;
  height: 30%;
}
.dialog-container {
  width: 80%;
  
  display: flex;
  flex-direction: column;
  background-color: #fff;
  justify-content: center;
  margin-left: 10%;
  border: 1rpx solid #cccccc;
  border-radius: 10rpx;
}
.btn_connect{
  width: 100%;
  height: 80rpx;
  background-color: #cccccc;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}
.input-wifi{
  width: 80%;
  border-bottom: 1rpx solid #eaeaea;
}